#define BUTTON_ICON_SIZE 36 36
#define BUTTON_SIZE 120 36
#define ENTRY_SIZE 360 36
#define OFFSET 10

externals {
    external: "elm";
}

collections {
   group {
      name: "entrance/wallpaper/default";
      parts {
         part { name: "base";
            type: RECT;
            description { state: "default" 0.0;
               color: 255 255 255 0;
            }
         }
         part { name: "clip1";
            type: RECT;
            description { state: "default" 0.0;
               visible: 1;
               color: 255 255 255 255;
               rel1 {
                  to: "cur";
                  relative: 1.0 0.0;
               }
            }
         }
         part { name: "clip2";
            type: RECT;
            description { state: "default" 0.0;
               visible: 1;
               color: 255 255 255 255;
               rel2 {
                  to: "cur";
                  relative: 0.0 1.0;
                  offset: 0 -1;
               }
            }
         }
         part { name: "cur";
            type: RECT;
            description { state: "default" 0.0;
               min: 1 0;
               max: 1 99999;
               visible: 0;
               align: 0.0 0.5;
            }
            description { state: "user" 0.0;
               inherit: "default" 0.0;
               align: 1.0 0.5;
            }
         }
         part { name: "entrance.wallpaper.default";
            clip_to: "clip1";
            type: SWALLOW;
            description { state: "default" 0.0;
               visible: 1;
            }
         }
         part { name: "entrance.wallpaper.user";
            clip_to: "clip2";
            type: SWALLOW;
            description { state: "default" 0.0;
               visible: 1;
            }
         }
         part { name: "entrance.wallpaper.user.start";
            clip_to: "clip2";
            type: SWALLOW;
            description { state: "default" 0.0;
               visible: 1;
            }
         }
         part { name: "entrance.screen";
            type: SWALLOW;
            description { state: "default" 0.0;
               visible: 1;
            }
         }
      }
      programs {
         program { name: "wallpaper_user";
            signal: "entrance,wallpaper,user";
            action: STATE_SET "user" 0.0;
            transition: LINEAR 0.7;
            target: "cur";
            after: "wallpaper_transition_end";
         }
         program { name: "wallpaper_default";
            signal: "entrance,wallpaper,default";
            action: STATE_SET "default" 0.0;
            transition: LINEAR 0.7;
            target: "cur";
            after: "wallpaper_transition_end";
         }
         program { name: "wallpaper_transition_end";
            action: SIGNAL_EMIT "entrance,wallpaper,end" "";
         }
      }
   }

   group {
      name : "entrance";

      data.item: "item_style_users"  "default";
      data.item: "item_style_actions" "default";

      parts {
         part { name: "clip";
            type: RECT;
            description { state: "default" 0.0;
               color: 255 255 255 255;
            }
            description { state: "show" 0.0;
               color: 255 255 255 255;
            }
         }
         part { name: "entrance.date";
            type: EXTERNAL;
            source: "elm/label";
            description { state: "default" 0.0;
               fixed: 1 1;
               visible: 1;
               align: 0 0;
               rel1.relative: 0 0;
               rel1.offset: OFFSET 0;
               max: 240 72;
               min: 240 72;
            }
         }
         part { name: "entrance.clock";
            type: SWALLOW;
            description { state: "default" 0.0;
               fixed: 1 1;
               visible: 1;
               align: 1 0;
               rel2.relative: 1 0;
               rel2.offset: -OFFSET 0;
               max: 240 72;
               min: 240 72;
            }
         }
         part { name: "entrance.login";
            clip_to: "clip";
            type: SWALLOW;
            description { state: "default" 0.0;
               visible: 1;
            }
         }
         part { name: "entrance.users";
            type: EXTERNAL;
            source: "elm/gengrid";
            description { state: "default" 0.0;
               rel1.relative: 0.0 -0.75;
               min: 76 100;
               max: 1 100;
               visible: 1;
               params {
                  bool: "horizontal" 0;
                  double: "vertical page relative" 0.0;
                  int: "horizontal item size" 72;
                  int: "vertical item size" 96;
               }
            }
            description { state: "enabled" 0.0;
               inherit: "default" 0.0;
               visible: 1;
            }
         }

         part { name: "entrance.actions";
            type: EXTERNAL;
            source: "elm/hoversel";
            description { state: "default" 0.0;
               fixed: 1 1;
               visible: 1;
               max: 0 0;
               min: BUTTON_ICON_SIZE;
               align: 0 0;
               rel1.offset: OFFSET 0;
               rel2.relative: 0 0;
               rel2.offset: 0 -OFFSET;
               params {
                  string: "icon" "system-log-out";
               }
            }
            description {
                state: "default" 0.5;
                inherit: "default" 0.0;
                align: 0 1;
                rel1.offset: OFFSET 0;
                rel2.relative: 0 1;
                rel2.offset: 0 -OFFSET;
            }
            description { state: "enabled" 0.0;
               inherit: "default" 0.5;
               visible: 1;
            }
         }
         part { name: "entrance.conf";
            type: EXTERNAL;
            source: "elm/button";
            description { state: "default" 0.0;
               fixed: 1 1;
               max: 0 0;
               min: BUTTON_ICON_SIZE;
               align: 1 0;
               rel2.relative: 1 0;
               rel2.offset: -OFFSET -OFFSET;
               params {
                  bool: "disabled" 1;
                  string: "icon" "preferences-other";
               }
            }
            description {
                state: "default" 0.5;
                inherit: "default" 0.0;
                align: 1 1;
                rel2.relative: 1 1;
                rel2.offset: -OFFSET -OFFSET;
            }
            description { state: "enabled" 0.0;
               inherit: "default" 0.5;
               visible: 1;
            }
         }

      }
      programs {
         program {
            name: "animation,state1";
            source: "";
            signal: "load";
            action: STATE_SET "default" 0.5;
            target: "entrance.actions";
            target: "entrance.conf";
            transition: LINEAR 0.5;
         }
         program {
            name: "user_enabled";
            signal: "entrance,users,enabled";
            source: "";
            action: STATE_SET "enabled" 0.0;
            target: "entrance.users";
         }
         program {
            name: "user_disabled";
            signal: "entrance,users,disabled";
            source: "";
            action: STATE_SET "default" 0.0;
            target: "entrance.users";
         }
         program {
            name: "conf_enabled";
            signal: "entrance,custom_conf,enabled";
            source: "";
            action: STATE_SET "enabled" 0.0;
            target: "entrance.conf";
         }
         program {
            name: "conf_disabled";
            signal: "entrance,custom_conf,disabled";
            source: "";
            action: STATE_SET "default" 0.0;
            target: "entrance.conf";
         }
      }
   }

   group {
      name : "entrance/login";
      parts {
         part {
            name: "error";
            type: RECT;
            description { state: "default" 0.0;
               color: 255 0 0 96;
               max: 0 0;
               min: 360 240;
               visible: 0;
            }
            description { state: "visible" 0.0;
               inherit: "default" 0.0;
               visible: 1;
            }
         }
         part {
            name: "entrance.login_label";
            type: SWALLOW;
            effect: SOFT_SHADOW;
            repeat_events: 0;
            description {
                state: "default" 0.0;
                align: 1 0.5;
                color: 200 200 200 255;
                max: 0 0;
                min: ENTRY_SIZE;
                rel2.offset: -320 -OFFSET*8;
            }
            description {
                state: "default" 0.5;
                inherit: "default" 0.0;
                align: 0.5 0.5;
            }
         }
         part {
            name: "entrance.login";
            type: SWALLOW;
            repeat_events: 0;
            description {
               state: "default" 0.0;
               align: 0 0.5;
               min: ENTRY_SIZE;
               max: 0 0;
            }
            description {
               state: "default" 0.5;
               inherit: "default" 0.0;
               align: 0.5 0.5;
            }
         }
         part {
            name: "entrance.password_label";
            type: SWALLOW;
            effect: SOFT_SHADOW;
            repeat_events: 0;
            description {
                state: "default" 0.0;
                align: 1 0.5;
                color: 200 200 200 255;
                max: 0 0;
                min: ENTRY_SIZE;
                rel1.offset: -300 OFFSET*8;
            }
            description {
                state: "default" 0.5;
                inherit: "default" 0.0;
                align: 0.5 0.5;
            }
         }
         part {
            name: "entrance.password";
            type: SWALLOW;
            repeat_events: 0;
            description {
                state: "default" 0.0;
                align: 0 0.5;
                min: ENTRY_SIZE;
                max: 0 0;
                rel1.offset: 0 OFFSET*16;
            }
            description {
                state: "default" 0.5;
                inherit: "default" 0.0;
                align: 0.5 0.5;
            }
         }

         part {
            name: "login_button";
            type: EXTERNAL;
            source: "elm/button";
            repeat_events: 0;
            description { state: "default" 0.0;
               max: BUTTON_SIZE;
               rel1.offset: 180 OFFSET*26;
               align: 0.5 1;
               visible: 1;
                params {
                    string: "label" "Login";
                    string: "icon" "start-here";
                }
            }
            description {
                state: "default" 0.5;
                inherit: "default" 0.0;
                align: 0.5 0.5;
            }
            description { state: "xsessions_disabled" 0.0;
                inherit: "default" 0.0;
                params {
                    bool: "disabled" 1;
                }
            }
         }

         part { name: "entrance.xsessions";
            type: SWALLOW;
            description { state: "default" 0.0;
               fixed: 1 1;
               max: BUTTON_SIZE;
               rel1.offset: -180 OFFSET*26;
               align: 0.5 1;
               visible: 1;
            }
            description {
                state: "default" 0.5;
                inherit: "default" 0.0;
                align: 0.5 0.5;
            }
            description { state: "xsessions_disabled" 0.0;
                inherit: "default" 0.5;
            }
         }
         part { name: "entrance.error";
            type: TEXT;
            mouse_events: 0;
            effect: SOFT_SHADOW;
            scale: 1;
            description { state: "default" 0.0;
               visible: 0;
               color: 255 255 255 0;
               fixed: 1 1;
               rel1.to_y: "entrance.xsessions";
               rel1.relative: 0.0 1.0;
               align: 0.5 0.0;
               rel1.offset: 0 50;
               rel2.offset: -1 51;
               text {
                  text: "Error on login ! Maybe wrong password ?";
                  font: "Sans";
                  size: 18;
                  min: 1 1;
                  ellipsis: -1;
                  align: 0.5 0.5;
               }
            }
            description { state: "visible" 0.0;
               inherit: "default" 0.0;
               visible: 1;
               color: 255 255 255 255;
            }
         }

      /*
       *
       * PROGRAMS
       *
       */
      programs {
         program {
            name: "animation,state1";
            source: "";
            signal: "load";
            action: STATE_SET "default" 0.5;
            target: "entrance.login";
            target: "entrance.login_label";
            target: "entrance.password";
            target: "entrance.password_label";
            target: "entrance.xsessions";
            target: "login_button";
            transition: LINEAR 0.5;
         }
         program {
            name: "login_error";
            signal: "entrance,auth,error";
            source: "";
            action: STATE_SET "visible" 0.0;
            target: "error";
            target: "entrance.error";
         }
         program {
            name: "login_change";
            signal: "entrance,auth,changed";
            source: "";
            action: STATE_SET "default" 0.0;
            target: "error";
            target: "entrance.error";
         }
         program {
            name: "check_auth";
            signal: "clicked";
            source: "login_button";
            action: SIGNAL_EMIT "entrance,auth,check" "";
         }
      }
